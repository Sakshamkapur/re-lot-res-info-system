<html>
<head>
	<title>Properties List</title>
  <link rel="stylesheet" type="text/css" href="/assets/css/common.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/properties.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

</head>
<body style="padding-left: 10%;padding-right:5%;padding-top:3%">
<% include partials/sidebar.ejs %>
<div style="display: flex;flex-wrap: wrap;justify-content: space-between;">
<% for(var i=0;i< row.length; i++){ %> 

        <div class="modal fade" id="myModal<%= i+1 %>" role="dialog">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= row[i].site_name %></h4>
                  </div>
                  <div class="modal-body">
                    <label>Site Name :</label>
                <article class="tags-bar">
                <input type="text" class="sitename" value="<%= row[i].site_name %>" name="sitename" placeholder="Add Site Name">
                </article>
                <hr>
                <label>Location : </label>
                <article class="tags-bar">
                <input type="text" class="location" value="<%= row[i].location %>" name="location" placeholder="Add Site Location">
                </article>
                <hr>
                <label>House model Information : </label>
                <article class="tags-bar">
                <textarea class="house_model_info" name="house_model_info" placeholder="Add house model info"><%= row[i].house_model_info %></textarea>
                </article>  
                <hr>
                <label>House Unit Information : </label>
                <article class="tags-bar">
                <textarea class="house_unit_info" name="house_unit_info" placeholder="Add house unit info"><%= row[i].house_unit_info %></textarea>
                </article>  
              </div>
              <div class="modal-footer">
                <button type="button" id="<%= row[i].id %>" class="btn btn-primary delete">Delete</button>
                <button type="button" id="<%= row[i].id %>" class="btn btn-primary edit">Edit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
          </div>


<div class="card" data-toggle="modal" data-target="#myModal<%= i+1 %>">
  <div class="cardImg">
    <!-- <span class="circle">27<br/>mar</span>
    <span class="cardImgFooter">photos</span> -->
  </div>
  <div class="cardText">
    <span class="title"><%= row[i].site_name %></span>
    <span class="subtitle"><%= row[i].location %></span>
    <p class="cardDescription">
      <%= row[i].house_model_info %><br/>
      <%= row[i].house_unit_info %>
      <br>
      <a class="cardReadMore" href="/create/client?siteid=<%= row[i].id %>">Add client<img src="https://img.icons8.com/android/12/ffffff/play.png"></a>
    </p>
    
    <div class="cardFooter">
      <span class="timeAgo">
        <img src="https://img.icons8.com/android/14/000000/clock.png">
        <%= row[i].created_on %></span>
      <span class="comments">
        <img src="https://img.icons8.com/android/14/646464/speech-bubble.png">
        39 comments</span>
    </div>
  </div>
</div>
<% } %>
</div>
</body>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
 <script type="text/javascript" src="/assets/js/properties.js"></script>
</html>