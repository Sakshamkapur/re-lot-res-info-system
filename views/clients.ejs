<html>
<head>
	<title>Clients</title>
	<link rel="stylesheet" type="text/css" href="/assets/css/common.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/clients.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

</head>
<body>
<% include partials/sidebar.ejs %>
<form class="search">
	  <input class="searchTerm" placeholder="Filter with any Text" />
	</form>
	<% for(var i=0;i< row.length; i++){ %>

	<div class="modal fade" id="myModal<%= i+1 %>" role="dialog">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= row[i].site_name %></h4>
                  </div>
                  <div class="modal-body">
                    <label>Client Name :</label>
                <article class="tags-bar">
                <input type="text" class="name" value="<%= row[i].name %>" name="name" placeholder="Add Client Name">
                </article>
                <hr>
                <label>Client Email : </label>
                <article class="tags-bar">
                <input type="text" class="email" value="<%= row[i].email %>" name="email" placeholder="Add Client Email">
                </article>
                <hr>
                <label>Company Name and Address : </label>
                <article class="tags-bar">
                <textarea class="company" name="company" placeholder="Add Company Name and Address"><%= row[i].company %></textarea>
                </article>  
                <hr>
                <label>Reserved House Unit & Payment type : </label>
                <article class="tags-bar">
                <textarea class="payment" name="payment" placeholder="Reserved House Unit & Payment type"><%= row[i].payment %></textarea>
                </article>  
                 <article class="tags-bar">
                <label>Progress :</label>
                <progress max="100" value="20" style="display: inline-flex;"></progress>
                <p><button type="button" id="more" class="acceptbtn">Accepted Payment</button></p>
            </article>
              </div>
              <div class="modal-footer">
                <button type="button" id="<%= row[i].id %>" class="btn btn-primary delete">Delete</button>
                <button type="button" id="<%= row[i].id %>" class="btn btn-primary edit">Edit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
          </div> 

	<div class="card">
	  <div class="card-stuff" data-toggle="modal" data-target="#myModal<%= i+1 %>">
	    <h2><%= row[i].name %></h2>
	    <time datetime="2001-05-15 19:00"><%= row[i].email %></time>
	    <p><%= row[i].company %></p>
	    <h5>Payment Detals</h5>
	    <p><%= row[i].payment %></p>
	  </div>
	  
	  
	  
	 <div class="com-contain">
	   <div class="com-expand-holder">
	      <a class="com-expand" href="#"> </a>
	     </div>
	  <div class="com-stuff">
	    <h5> <%= prow[i].site_name%></h5>
	    <p><%= prow[i].house_unit_info %></p>
	  </div>
	   <span class="com-desc">
	    	Reserved site	
	    </span>
	</div>
</div>
	<% } %>
</body>
	  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
 <script type="text/javascript" src="/assets/js/clients.js"></script>
</html>